#include <iostream>
#include <iomanip>  // for setw
using namespace std;

int main() {
    int n;

    cout << "Enter number of processes: ";
    cin >> n;

    int pid[n], at[n], bt[n], ct[n], tat[n], wt[n];

    // Input process details
    for (int i = 0; i < n; i++) {
        pid[i] = i + 1;
        cout << "Enter Arrival Time for P" << pid[i] << ": ";
        cin >> at[i];
        cout << "Enter Burst Time for P" << pid[i] << ": ";
        cin >> bt[i];
    }

    int currentTime = 0;
    float avgWT = 0, avgTAT = 0;

    // FCFS Scheduling calculations
    for (int i = 0; i < n; i++) {
        if (currentTime < at[i]) {
            currentTime = at[i];
        }

        currentTime += bt[i];
        ct[i] = currentTime;
        tat[i] = ct[i] - at[i];
        wt[i] = tat[i] - bt[i];

        avgWT += wt[i];
        avgTAT += tat[i];
    }

    // Output results
    cout << "\nPID\tAT\tBT\tWT\tTAT\tCT\n";
    for (int i = 0; i < n; i++) {
        cout << "P" << pid[i] << "\t"
             << at[i] << "\t"
             << bt[i] << "\t"
             << wt[i] << "\t"
             << tat[i] << "\t"
             << ct[i] << "\n";
    }

    cout << fixed << setprecision(2);
    cout << "\nAverage Waiting Time: " << (avgWT / n) << endl;
    cout << "Average Turnaround Time: " << (avgTAT / n) << endl;

    return 0;
}
